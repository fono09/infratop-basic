<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %> 件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list, url: '/lists', method: :post do |f| %>
  タイトル: <%= f.text_field :title %>
  本文: <%= f.text_area :body %>
  画像: <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit '投稿' %>
<% end %>
